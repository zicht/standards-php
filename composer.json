{
     "name": "zicht/standards-php",
     "description": "Contains the Zicht PHP coding standards, including phpcs ruleset",
     "license": "MIT",
     "require": {
          "squizlabs/php_codesniffer": "^3"
     },
     "autoload": {
          "classmap": ["Zicht"],
          "exclude-from-classmap": ["/Zicht/correct.php", "/Zicht/incorrect.php"]
     },
     "scripts": {
          "lint": [
               "phpcs -s Zicht/Sniffs/ --standard=Zicht --extensions=php -p --parallel=$(nproc)"
          ],
          "lint-fix": [
               "phpcbf -s Zicht/Sniffs/ --standard=Zicht --extensions=php --parallel=$(nproc)"
          ]
     }
}
